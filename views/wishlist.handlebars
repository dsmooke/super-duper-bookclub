<!--import saved books from either google api or our database-->

<h3 class="mb-1">Your Wishlist</h3>
  <div id="wishBox" class="container flex-wrap">
  <div id="wishList" class="list-group flex-wrap">

    {{#each book}}
    <a id="wishBook-{{this.id}}" 
        href="/wishlist" 
        class="list-group-item list-group-item-action flex-column align-items-start active">

      <div id="wishHeading-{{this.id}}" 
        class="d-flex w-100 justify-content-between">

          <h5 id="title-{{this.id}}">
            {{title}}</h5>

          <h5 id="authors-{{this.id}}">
            By {{author}}</h5> 
          
          <small id="genre-{{this.id}}" class="text-muted">
            {{genre}}</small>

            <i id="trashBookBtn" class="far fa-trash-alt btn"></i>
      </div>

      <div id="wishListBody-{{this.id}}">

        <p id="description-{{this.id}}" 
          class="mb-1" 
          placeholder="Donec id elit non mi porta gravida at eget metus. Maecenas sed diam eget risus varius blandit.">
          {{description}}</p>

          <small id="latin-omit">Donec id elit non mi porta.</small>
          <img id="wishCover-{{this.id}}" 
            alt="wishCover-{{this.id}}" 
            class="img flex-wrap" 
            src="{{thumbnail}}">
      </div>

    </a>
    {{/each}}
    
  </div>
  </div>

